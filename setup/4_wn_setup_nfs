sudo bash -c 'apt update && apt upgrade -y && apt install -y nfs-common && \
rm -f /etc/systemd/system/nfs-common.service && sudo rm -f /lib/systemd/system/nfs-common.service && \
systemctl daemon-reexec
sudo systemctl start nfs-common
curl -fsSL https://raw.githubusercontent.com/AlexandrNeverov/k8s/refs/heads/main/configs/idmapd.conf > /etc/idmapd.conf && \
systemctl restart nfs-common
systemctl status nfs-common'
